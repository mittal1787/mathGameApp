<OpenScreen>:
    name: "Open"
    id: open

    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            Label:
                text: "Welcome! Please put the number of groups playing in the text input\n(If you type in a number less than or equal to 0 or if you type nothing, it is automatically one group)"

            TextInput:
                id: group_count
                input_filter: "int"
                multiline: False
                text: "0"

        Button:
            id: proceed
            text: "proceed"
            on_press:
                if group_count.text == "": group_count.text = "0"
                for i in range(int(group_count.text)-1): root.manager.group_dict["A" + str(i+1)] = 0
                print(root.manager.group_dict)
            on_release:
                app.root.current = "Q1"

<QuestionScreenOne>:
    name: "Q1"
    id: q1

    GridLayout:
        id: "QuestionGrid"
        cols: 1
        Label:
            text: "What is two times the sum of a number and five?(50 pts)"

        Label:
            text: "Pick your group:"

        Spinner:
            id: group_spin
            size: 100, 44
            pos_hint: {'center': (.5, .5)}
            text: "A0"
            values: root.manager.group_dict



        Button:
            id: "answer_1"
            text: "2(x+5)"
            on_release:
                app.root.current = "Q2"
                print(root.manager.group_dict)
            on_press:
                root.manager.group_dict[group_spin.text] += 50
                print(root.manager.group_dict[group_spin.text])


        Button:
            id: "answer_2"
            text: "4x"
            on_release:
                app.root.current = "Q2"
                print(root.manager.group_dict)
            on_press:
                root.manager.group_dict[group_spin.text] -= 50
                print(root.manager.group_dict[group_spin.text])

        Button:
            id: "answer_3"
            text: "2x+5"
            on_release:
                app.root.current = "Q2"
                print(root.manager.group_dict)
            on_press:
                root.manager.group_dict[group_spin.text] -= 50
                print(root.manager.group_dict[group_spin.text])

        Button:
            id: "answer_4"
            text: "x+5"
            on_release: app.root.current = "Q2"
            on_press:
                root.manager.group_dict[group_spin.text] -= 50
                print(root.manager.group_dict[group_spin.text])

        Label:
            text: "Scores: " + str(root.manager.group_dict)

